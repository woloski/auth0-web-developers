.btn 
  display inline-block
  cursor pointer
  font-size 17px
  color white
  text-shadow 1px 1px 0 #394555
  border-radius 2px
  text-decoration none !important
  font-weight bold
  box-shadow 1px 1px 1px 1px rgb(19, 62, 102)
  border 0
  padding 10px 28px
  width 98%
  background-color #3C71A1

.btn.big
  height: 60px;
  font-size: 20px;

.btn.small
  width 140px
  font-size: 14px;

.btn.x-small
  width: 70px
  font-size: 13px
  padding: 5px
  margin: 5px

.btn.mid
  width: 70px
  font-size: 14px
  padding: 5px
  margin-top: -3px

.btn:hover
  color rgb(226, 238, 250)

.btn:active
    position:relative;
    top:1px;

.popup .overlay 
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 9999;
  font-weight: 200;
  user-select: none;
  background: #000;
  background: rgba(0,0,0,0.8);
  background: -webkit-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  background: -moz-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  background: -ms-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  background: radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  opacity: 0;
  transition: 400ms opacity ease;
  transform: translate3d(0, 0, 0);

  form
    margin 30px
    position relative
    z-index 5

    label
      display: block;
      color: #7F8899;
      font-size: 13px;
      font-weight: bold;
      margin: 0 0 7px 0;
      text-shadow: 0 1px 0 white;
      user-select: none;
    input
      box-sizing: border-box;
      width: 100%;
      font-size: 18px;
      padding: 10px 12px;
      border: 1px solid #B4BECD;
      border-top-color: #B0BACA;
      border-bottom-color: #D3D9E2;
      box-shadow: inset 0 1px 2px rgba(130,137,150,0.23),0 1px 0 rgba(255,255,255,0.85);
      border-radius: 4px;
      color: black;
      margin: 0;
      font-family: 'Helvetica Neue',Helvetica,Arial Geneva,sans-serif;

  .panel.active
    display: block;
  .panel
    position absolute
    
    left     50%
    top      50%

    height 300px
    width  500px

    margin-top: -150px;
    margin-left: -250px;

    background: #eaeef1;
    background-image: linear-gradient(#f1f4f6,#eaeef1);
    box-shadow: 0 0 1px 1px rgba(0,0,0,0.4),0 10px 27px rgba(0,0,0,0.7);
    overflow: hidden;
    border-radius: 6px;
    box-sizing: border-box;
    display: none;
    font-family: sans-serif;
    header
      display: block;
      background: #fff;
      border-radius: 6px 6px 0 0;
      padding: 0;
      margin: 0;
      h1
        padding: 18px 20px;
        margin: 0;
        font-size: 24px;
        color: #333;
        font-weight: bold;
        border-bottom: 1px solid #DDE3E6;
      a
        display: block;
        overflow: hidden;
        text-indent: 200%;
        position: absolute;
        width: 12px;
        opacity: 0.4;
        padding: 5px;
        z-index: 5;
      a.close
        height: 12px;
        background: url("https://d19p4zemcycm7a.cloudfront.net/sdk/img/close.png") 50% 50% no-repeat;
        background-size: 12px 12px;
        right: 19px;
        top: 21px;
        cursor: pointer;

    .list
      margin: 30px;
      position: relative;
      z-index: 5;   

.popup .overlay.active
  opacity 1

.topbar
  position fixed
