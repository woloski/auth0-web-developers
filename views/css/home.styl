@import 'nib'
@import 'grid'

body
  background linear-gradient(rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0))
  background-color #E8EBEF
  background-image url('/img/cream_dust.png');
  font-family 'Open Sans'
  margin 0

.middle
  margin-top    50px
  min-height    1100px
  max-width: 968px;
  margin: 0 auto;

.main
  .carousel
    column(12)
    margin-top 40px

    .item
      .twocols
        article
          column(6)
        h3
          margin-top 0px
          line-height 1.3em
          color #394755
          font-weight 600
        p
          column(12)
          line-height 1.5em
          margin-bottom 20px
          margin-left 0px
          color #394755

      p
        column(7)
        offset(0)
      article
        color rgb(97, 110, 122)
        margin-bottom 10px
        column(5)
        margin-top 80px
        h3
          margin-top 0px
          line-height 1.3em
          color #394755
          font-weight 600
        p
          column(12)
          line-height 1.5em
          margin-bottom 10px
          margin-left 0px
      .snippet
        column(12)
        pre
          text-align left
          border-top-right-radius: 0px;
          border-top-left-radius: 0px;
        p
          margin-top 0px;
          padding 5px;
          font-weight 600
          font-size 14px
          margin-bottom 0px
          color #394755
          background-color rgb(238, 238, 238);
          border-top 1px solid #e1e1e8;
          border-left 1px solid #e1e1e8;
          border-right 1px solid #e1e1e8;
          border-top-right-radius: 4px;
          border-top-left-radius: 4px;
            
  .button-bar
    column(12)
    button
      column(4)
      offset(4)
      margin-top 20px
      margin-bottom 40px
    
  #screenshots-pager
    column(12)
    text-align center
    margin-top 10px
    margin-bottom 10px
    a
      color #394755
      font-size 15px
      text-decoration none
      margin 3px

  .footer
    column(12)
    margin-bottom 40px
    ul
      column(6)
      offset(3)
      li
        display inline
        margin 10px
        font-size 14px
        font-weight 300
        list-style none
        [class^="icon-"]
          font-size 22px
        a
          color: #999;
          text-decoration: none;
        a:hover
          color: black

.depth
  display block
  color #394755   
  position relative
  width 240px
  margin 0 auto

.depth:before, .depth:after {
    content  attr(title)
    color  rgba(255,255,255,.1)
    position  absolute
}

.header
  background-color rgb(253, 253, 253)
  background-image url('/img/cream_dust.png');
  height 76px

.header-container
  max-width 968px
  margin 0 auto
  ul
    float right
    margin-top 25px
    li
      display inline
      margin 20px
      font-size 16px
      font-weight 600
      list-style none
      a
        color #999
        text-decoration none
      a:hover
        color black


.header 
  h1 
    float left
    font-size 2em
    margin 0
    letter-spacing 1px
    font-weight 800
    margin-top 16px
  .logo
    background url('/img/logo-small.png') 0 50% no-repeat
    width 40px
    height 76px
    float left
    margin-left 10px

.tagline
  background-color #6C87A1
  box-shadow inset 0 2px 6px rgba(0,0,0,0.34)
  -webkit-box-shadow inset 0 2px 6px rgba(0,0,0,0.34)
  -moz-box-shadow inset 0 2px 6px rgba(0,0,0,0.34)
  -o-box-shadow inset 0 2px 6px rgba(0,0,0,0.34)
  border-bottom solid 10px #294D6E
  h3 
    font-size 1.5em
    font-weight 300
    color rgb(218, 237, 255)
    margin  0 auto
    margin-top  10px
    text-align center


.tagline-container 
  max-width 968px
  margin 0 auto
  padding 40px

h2 {
  font-size: 2em;
  font-weight: 300;
  margin: 0;
  color: #fff;
  text-align:center;
}

.depth:before { top: 1px; left: 1px }
.depth:after  { top: 2px; left: 2px }

.btn 
  display inline-block
  cursor pointer
  font-size 17px
  color white
  text-shadow 1px 1px 0 #394555
  border-radius 2px
  text-decoration none !important
  font-weight bold
  box-shadow 1px 1px 1px 1px rgb(19, 62, 102)
  border 0
  padding 10px 28px
  width 98%
  background-color #3C71A1

.btn.big
  height: 60px;
  font-size: 20px;

.btn:hover
  color rgb(226, 238, 250)

.btn:active
    position:relative;
    top:1px;

.popup .overlay 
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 9999;
  font-weight: 200;
  user-select: none;
  background: #000;
  background: rgba(0,0,0,0.8);
  background: -webkit-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  background: -moz-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  background: -ms-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  background: radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.45) 1%, rgba(0,0,0,0.8) 100%);
  opacity: 0;
  transition: 400ms opacity ease;
  transform: translate3d(0, 0, 0);

  form
    margin 30px
    position relative
    z-index 5

    label
      display: block;
      color: #7F8899;
      font-size: 13px;
      font-weight: bold;
      margin: 0 0 7px 0;
      text-shadow: 0 1px 0 white;
      user-select: none;
    input
      box-sizing: border-box;
      width: 100%;
      font-size: 18px;
      padding: 10px 12px;
      border: 1px solid #B4BECD;
      border-top-color: #B0BACA;
      border-bottom-color: #D3D9E2;
      box-shadow: inset 0 1px 2px rgba(130,137,150,0.23),0 1px 0 rgba(255,255,255,0.85);
      border-radius: 4px;
      color: black;
      margin: 0;
      font-family: 'Helvetica Neue',Helvetica,Arial Geneva,sans-serif;

  .panel.active
    display: block;
  .panel
    position absolute
    
    left     50%
    top      50%

    height 300px
    width  500px

    margin-top: -150px;
    margin-left: -250px;

    background: #eaeef1;
    background-image: linear-gradient(#f1f4f6,#eaeef1);
    box-shadow: 0 0 1px 1px rgba(0,0,0,0.4),0 10px 27px rgba(0,0,0,0.7);
    overflow: hidden;
    border-radius: 6px;
    box-sizing: border-box;
    display: none;
    font-family: sans-serif;
    header
      display: block;
      background: #fff;
      border-radius: 6px 6px 0 0;
      padding: 0;
      margin: 0;
      h1
        padding: 18px 20px;
        margin: 0;
        font-size: 24px;
        color: #333;
        font-weight: bold;
        border-bottom: 1px solid #DDE3E6;
      a
        display: block;
        overflow: hidden;
        text-indent: 200%;
        position: absolute;
        width: 12px;
        opacity: 0.4;
        padding: 5px;
        z-index: 5;
      a.close
        height: 12px;
        background: url("https://d19p4zemcycm7a.cloudfront.net/sdk/img/close.png") 50% 50% no-repeat;
        background-size: 12px 12px;
        right: 19px;
        top: 21px;
        cursor: pointer;

    .list
      margin: 30px;
      position: relative;
      z-index: 5;   

.popup .overlay.active
  opacity 1

.topbar
  position fixed
  top 0
  right 2%
  float left 
  .btn
    margin: 5px;
    height: 35px;
    width: 35px;
    padding: 0;
    font-size: 22px;
    padding-top: 4px;
    padding-left: 15px;
  .btn.label
    width: 80px;
    font-weight: 500;
    i
      margin-right: 5px;

.carousel a
  color: #ffffff

.carousel .item a
  color: #3799ca

.carousel-caption
  position: static
  background: transparent

.carousel-control
  text-decoration none
  line-height 26px
  border 0

.carousel .item > p,
.carousel-caption p
  font: 14px/23px 'Open Sans', sans-serif
  text-shadow: #ffffff 0 1px 0
  color: #333333
  text-align: center

.center-align
  text-align: center

code
  font-family Consolas,Monaco,Menlo,"Courier New",monospace
  font-size 13px
