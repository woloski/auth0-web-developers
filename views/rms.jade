extends layout

block tagline
  .tagline
    .tagline-container
      h2 Open Rights Management Services to Everyone
      h3 Share protected documents with users authenticated with Google Apps, Office 365, Active Directory, LiveId, Gmail or any other Identity Provider

block content
  .middle
    .main
      
      #screenshots.carousel.slide
        .carousel-inner
          .item.active(data-explain='one')
            p
              img(src='img/auth0-rms-install.png', alt='Connect RMS with Auth0')
            article
              h3 Connect RMS with Auth0 with a single setting.
              p Federate Rights Management Services with Auth0 in minutes. Just enter your Auth0 instance URL. 
              p No deployment needed. No additional components required.
          .item(data-explain='two')
            p
              img(src='img/auth0-rms-protect-doc.png', alt='Protect Word or Excel with federated RMS')
            article
              h3 Protect Word documents or Excel spreadsheets. 
              p Share them with any of your partners authenticating with social or enterprise identity providers.
              p Assign access rights to your documents across any organization.
          .item(data-explain='three')
            p
              img(src='img/auth0-rms-open-protected-doc.png', alt='Allow users to sign in with their work credentials or with with their social identity and open protected documents')
            article
              h3 Open protected documents with your social or enterprise credentials
              p Use Windows Rights Management and Auth0 Login Widget to authenticate and open protected content.
 
      #screenshots-pager
        a.one.pager-active(href="#", data-to="one")
          i.icon-circle
        a.two(href="#", data-to="two")
          i.icon-circle-blank
        a.three(href="#", data-to="three")
          i.icon-circle-blank

      .button-bar
        button#sign-up-btn.btn.big(type='button') 
          | Request Invite

  .popup
    .overlay(style="display: none;")
      #sign-up.panel
        header
          h1 Sign Up
          a.close(style='display: block;') Close
        .list
          form#sign-up-form(style='display: block;')
            .email
              label(for='email') We will let you know as soon as we go live!
              input#email(name='email', type='email', value='', placeholder='your email', required)
              p.error Â 
            button.btn(type='submit', style="width: 150px;")
              i.icon-envelope 
              |&nbsp;Sign Up
      #sign-up-done.panel
        header
          h1 Done!
          a.close(style='display: block;') Close
        .list
          p Thank you very much for your interest!
          p We will let you know as soon as we go live.

